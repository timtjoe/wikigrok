{
  "version": 2,
  "bunVersion": "1.x",
  "build": {
    "env": {
      "VERCEL_EXPERIMENTAL_BACKENDS": "1"
    }
  },
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "src/index.ts" },
    { "source": "/(.*)", "destination": "src/index.ts" }
  ]
}
